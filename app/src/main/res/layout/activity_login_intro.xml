<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginIntro">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_quiz_login_hero_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/loginHeaderTextView">

    </ImageView>


    <TextView
        android:id="@+id/loginHeaderTextView"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Quiz Master"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/loginSubHeaderTextView">

    </TextView>


    <TextView
        android:id="@+id/loginSubHeaderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Isn`t life a collection of weird quizzes with \n no  answer to half the questions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

    </TextView>

    <Button
        android:id="@+id/getStartedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Get started"
        android:layout_marginTop="32dp"
        app:cornerRadius = "10dp"
        android:backgroundTint="@color/black"
        app:layout_constraintStart_toStartOf="@id/loginSubHeaderTextView"
        app:layout_constraintEnd_toEndOf="@id/loginSubHeaderTextView"
        app:layout_constraintTop_toBottomOf="@id/loginSubHeaderTextView"
        >

    </Button>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:src="@drawable/ic_wave"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

    </ImageView>





</androidx.constraintlayout.widget.ConstraintLayout>